/* 全局样式，设置页面背景 */
.container {
  display: flex;
  flex-direction: column;    /* 垂直排列子元素 */
  justify-content: center;   /* 垂直居中 */
  align-items: center;       /* 水平居中 */
  height: 100vh;             /* 占满整个视口高度 */
  padding: 20rpx;            /* 页面内边距 */
  background-color: #f0f8ff; /* 淡蓝色背景 */
}

/* 第一部分：垃圾条目 */
.view_question {
  margin-bottom: 40rpx;      /* 下方外边距 */
  font-size: 36rpx;          /* 字体大小 */
  font-weight: bold;         /* 字体加粗 */
  color: #333333;            /* 深色字体 */
  background-color: #ffffff; /* 白色背景 */
  padding: 20rpx;            /* 内边距 */
  border-radius: 12rpx;      /* 圆角边框 */
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1); /* 添加阴影 */
}

/* 第二部分：选项按钮 */
.view_choices {
  display: flex;
  flex-direction: column;    /* 垂直排列子元素 */
  gap: 20rpx;                /* 按钮间距 */
  width: 100%;               /* 占满容器宽度 */
}

.view_choices button {
  background-color: #007aff; /* 按钮背景颜色 */
  color: #ffffff;            /* 按钮文字颜色 */
  border: none;              /* 移除默认边框 */
  border-radius: 12rpx;      /* 按钮圆角 */
  padding: 20rpx 40rpx;      /* 内边距 */
  font-size: 30rpx;          /* 字体大小 */
  font-weight: bold;         /* 字体加粗 */
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.15); /* 按钮阴影 */
  cursor: pointer;           /* 鼠标指针 */
  transition: background-color 0.3s ease; /* 过渡效果 */
}

.view_choices button:disabled {
  background-color: #cccccc; /* 禁用按钮背景色 */
  color: #666666;            /* 禁用按钮文字颜色 */
  box-shadow: none;          /* 移除阴影 */
}

/* 第三部分：调控按钮 */
.view_button {
  display: flex;
  justify-content: space-around; /* 水平分布按钮 */
  margin-top: 40rpx;             /* 上方外边距 */
  width: 100%;                   /* 占满容器宽度 */
}

.view_button button {
  background-color: #28a745; /* 绿色背景 */
  color: #ffffff;            /* 白色文字 */
  border: none;              /* 移除默认边框 */
  border-radius: 12rpx;      /* 圆角按钮 */
  padding: 20rpx 40rpx;      /* 内边距 */
  font-size: 30rpx;          /* 字体大小 */
  font-weight: bold;         /* 字体加粗 */
  cursor: pointer;           /* 鼠标指针 */
  transition: background-color 0.3s ease; /* 过渡效果 */
}

/* 第四部分：答案显示 */
.view_answer {
  margin-top: 40rpx;         /* 上方外边距 */
  font-size: 28rpx;          /* 字体大小 */
  color: #333333;            /* 深色字体 */
  background-color: #ffffff; /* 白色背景 */
  padding: 20rpx;            /* 内边距 */
  border-radius: 12rpx;      /* 圆角边框 */
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1); /* 添加阴影 */
  text-align: center;        /* 文本居中 */
  width: 100%;               /* 占满容器宽度 */
  max-width: 600rpx;         /* 最大宽度 */
}
