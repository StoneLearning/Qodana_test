/* 页面整体样式 */
.page-container {
  padding: 20rpx;
  background-color: #f5f5f5; /* 页面背景颜色 */
}

/* 类别卡片容器 */
.category {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1); /* 卡片阴影 */
}

/* 标题样式 */
.title {
  display: flex;           /* 使用 Flexbox 布局 */
  justify-content: center; /* 水平居中 */
  align-items: center;     /* 垂直居中 */
  text-align: center;      /* 确保文本在行内居中 */
  font-size: 36rpx;        /* 设置字体大小 */
  font-weight: bold;       /* 加粗字体 */
  color: #333333;          /* 字体颜色 */
  margin-bottom: 20rpx;    /* 设置底部外边距 */
}

/* 描述样式 */
.description {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 内容部分 */
.content {
  background-color: #e3f2fd;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  text-align: center;
}
.text-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

.content .items {
  font-size: 28rpx;
  color: #444444;
  line-height: 1.6;
}

/* 投放要求部分 */
.requirements {
  background-color: #e0f7fa;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
}

.requirements-list {
  margin-top: 10rpx;
}

.requirements-list text {
  font-size: 28rpx;
  color: #00796b;
  line-height: 1.6;
}

/* 详细信息部分的样式 */
.categories {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.categories text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
